{
	"extends": [
		"wesbos",
		"plugin:react-perf/recommended",
		"plugin:@next/next/recommended",
		"plugin:prettier/recommended"
	],
	"plugins": [
		"react-perf"
	],
	"rules": {
		"no-nested-ternary": 0,
		"react/prop-types": [
			2,
			{
				"skipUndeclared": true
			}
		],
		// "import/no-anonymous-default-export": "warn",
		// "react/react-in-jsx-scope": 0,
		"react/no-danger": 0,
		// "react/jsx-props-no-spreading": 0,
		"arrow-parens": [
			2,
			"as-needed"
		],
		"jsx-a11y/alt-text": [
			"warn",
			{
				"elements": [
					"img"
				],
				"img": [
					"Image"
				]
			}
		],
		"jsx-a11y/label-has-associated-control": [
			"error",
			{
				"required": {
					"some": [
						"nesting",
						"id"
					]
				}
			}
		],
		"react-perf/jsx-no-new-object-as-prop": [
			"error",
			{
				"nativeAllowList": "all"
			}
		],
		"react-perf/jsx-no-new-array-as-prop": [
			"error",
			{
				"nativeAllowList": "all"
			}
		],
		"prettier/prettier": [
			"error",
			{
				"trailingComma": "es5",
				"singleQuote": true,
				"printWidth": 120,
				"tabWidth": 4,
				"semi": false,
				"endOfLine": "auto",
				"arrowParens": "avoid"
			}
		]
	},
	"settings": {
		"import/resolver": {
			"jsconfig": {
				"config": "jsconfig.json"
			}
		}
	}
}